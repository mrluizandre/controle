<!DOCTYPE html>
<html>
  <head>
    <title>Controle</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-secondary">
      <div class="container">
        <%= link_to 'Controle de mantimentos', root_path, class: 'navbar-brand' %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to 'Produtos', products_path, class: 'nav-link' %>
            </li>
<!--             <li class="nav-item">
              <%= link_to 'Transações', transactions_path, class: 'nav-link' %>
            </li> -->
            <li class="nav-item">
              <%= link_to 'Lista de compras', to_buy_products_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Configuração', edit_setting_path(Setting.first), class: 'nav-link' %>
            </li>
          </ul>
        </div>
      </div>
    </nav> 

    <div class="container">
      <% if alert.present? %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= alert %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% end %>

      <% if notice.present? %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= notice %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
