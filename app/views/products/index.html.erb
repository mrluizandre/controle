<h1>Produtos</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Estoque mínimo</th>
      <th>Stock</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.minimum_stock %></td>
        <td><%= product.stock %></td>
        <td>
          <div class="btn-group btn-group-sm">
            <%= link_to 'Entrada', new_transaction_path(product_id: product.id, transaction_type: 'entrada'), class: 'btn btn-info' %>
            <%= link_to 'Saída', new_transaction_path(product_id: product.id, transaction_type: 'saída'), class: 'btn btn-info' %>
            <%= link_to 'Visualizar', product, class: 'btn btn-secondary' %>
            <%= link_to 'Editar', edit_product_path(product), class: 'btn btn-secondary' %>
            <%= link_to 'Excluír', product, method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-danger' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Cadastrar produto', new_product_path, class: 'btn btn-primary' %>
